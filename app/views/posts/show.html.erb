 <div id = "post_content"> 
 		<h1> <%= @post.title %> </h1> 
 		<p><%= @post.content %> </p>
 		<p> Published At : <%= time_ago_in_words(@post.created_at) %> ago by <b> <%= @post.user.email %> </b> </p> 
 		<div class= "comments">
 			<h3> <%= @post.comments.count %> Comments</h3>
 			<%= render @post.comments %>
 			<h3> Reply to thread </h3> <%= render "comments/form" %> 
 		</div>

	<%= link_to 'Back', posts_path %> |	
	 	<%= link_to 'Edit', edit_post_path(@post) %> | 
 		<%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
 	</div>

	